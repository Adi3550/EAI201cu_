# -----------------------------
# 2(b) STATISTICAL ANALYSIS
# -----------------------------

# Class imbalance ratio
class_sizes = df["Class_Type"].value_counts()
class_imbalance_ratio = class_sizes.max() / class_sizes.min()
print("Class Imbalance Ratio =", round(class_imbalance_ratio, 2))
print("\nClass Counts:\n", class_sizes)

# Low variance features
numeric_cols = df.select_dtypes(include=[np.number])
variances = numeric_cols.var()
low_variance_features = variances[variances < 0.01].index.tolist()
print("\nLow Variance Features:", low_variance_features)

# Highly correlated feature pairs (|corr| > 0.8)
corr_matrix = numeric_cols.corr().abs()
high_corr_pairs = [
    (c1, c2, corr_matrix.loc[c1, c2])
    for c1 in corr_matrix.columns
    for c2 in corr_matrix.columns
    if c1 < c2 and corr_matrix.loc[c1, c2] > 0.8
]
print("\nHighly Correlated Feature Pairs (|corr| > 0.8):")
for pair in high_corr_pairs:
    print(pair)

