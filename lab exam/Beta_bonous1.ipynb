# BONUS 1 â€” Class imbalance handling using class_weight='balanced'

rf_balanced = RandomForestClassifier(
    n_estimators=80,
    max_depth=8,
    min_samples_split=6,
    class_weight="balanced",
    random_state=123,
    n_jobs=-1
)

rf_balanced_pipeline = Pipeline([
    ("preproc", preprocessor_rf),
    ("clf", rf_balanced)
])

rf_balanced_pipeline.fit(X_train, y_train)

y_pred_balanced = rf_balanced_pipeline.predict(X_test)
balanced_acc = accuracy_score(y_test, y_pred_balanced)

print("\n===== BONUS RF (class_weight='balanced') =====")
print(f"Balanced RF Test Accuracy: {balanced_acc:.4f}")
print(classification_report(y_test, y_pred_balanced))
print("==============================================")
